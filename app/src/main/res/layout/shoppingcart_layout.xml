<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:text="金額:"
            android:textColor="?android:attr/colorForeground"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="Script"
            android:textColor="?android:attr/colorForeground"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="品名:"
            android:textColor="?android:attr/colorForeground"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="Name"
            android:textColor="?android:attr/colorForeground"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="?android:attr/colorActivatedHighlight"
            android:text="＋" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/btPlus"
            android:text="0"
            android:textColor="?android:attr/colorForeground"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btMiner"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginTop="45dp"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/amount"
            android:backgroundTint="?android:attr/textColorHighlight"
            android:text="－" />

        <Button
            android:id="@+id/btDel"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/Mycolor2"
            android:text="刪除"
            android:textColor="@color/TitleString" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:paddingTop="30dp"
            android:text="ID"
            android:textColor="?android:attr/colorForeground"
            android:textSize="20sp"
            android:visibility="invisible" />

    </RelativeLayout>
</LinearLayout>